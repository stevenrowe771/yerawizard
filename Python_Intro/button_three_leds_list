from gpiozero import LED, Button
from signal import pause

led_index = 0
red_led = LED(17)
blue_led = LED(27)
green_led = LED(22)
led_list = [red_led, blue_led, green_led]
button = Button(26, bounce_time=0.05)

def reset_leds():
    for light in led_list:
        light.off()

def switch_led():
    global led_index
    reset_leds()
    led_list[led_index].on()
    led_index += 1
    if led_index >= len(led_list):
        led_index = 0

reset_leds()
button.when_pressed = switch_led
pause()